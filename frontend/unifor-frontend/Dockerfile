# Copia os arquivos de depend√™ncia
COPY package*.json ./

# Instala Angular CLI e depend√™ncias do projeto
RUN npm install -g @angular/cli@15.2.0
RUN npm install --force

# Copia o restante do c√≥digo-fonte
COPY . .

# Gera o build de produ√ß√£o
RUN ng build --configuration production

# ================================
# üöÄ Etapa de produ√ß√£o (Nginx)
# ================================
FROM nginx:1.25-alpine
WORKDIR /usr/share/nginx/html

# Remove o site padr√£o
RUN rm -rf ./*

# Copia o build gerado do Angular
COPY --from=build /app/dist/unifor-frontend ./

# Copia configura√ß√£o customizada do Nginx
